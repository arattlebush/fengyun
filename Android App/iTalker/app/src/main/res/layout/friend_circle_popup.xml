<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/len_5"
    android:background="@drawable/layout_bg_grey"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <net.qiujuer.genius.ui.widget.EditText
        android:id="@+id/edit_content"
        android:layout_width="@dimen/len_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:lineSpacingExtra="@dimen/len_0"
        android:lineSpacingMultiplier="1"
        android:maxHeight="@dimen/len_80"
        android:maxLines="2"
        android:minHeight="@dimen/len_35"
        android:paddingLeft="@dimen/len_10"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textColor="@color/textPrimary"
        android:hint="@string/hint_comment"
        android:textSize="@dimen/font_16"
        android:gravity="center_vertical"
        android:textColorHint="@color/grey_500"
        app:gBorder="bottom"
        app:gBorderSize="@dimen/len_2"
        app:gBorderColor="@color/green_500"
        app:gLineColor="@color/green_500"
        app:gLineSize="@dimen/len_1"
        android:textCursorDrawable="@drawable/ic_cursor" />

    <TextView
        android:id="@+id/txt_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/len_10"
        android:background="@drawable/btn_grey"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:padding="@dimen/len_8"
        android:text="@string/label_release"
        android:textColor="@color/grey_400"
        android:textSize="@dimen/font_16" />
</LinearLayout>
