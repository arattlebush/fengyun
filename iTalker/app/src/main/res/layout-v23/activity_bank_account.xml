<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_300"
    android:orientation="vertical"
    tools:context="net.fengyun.italker.italker.activities.BankAccountActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionBarWithStatusBarSize"
        android:background="@color/colorPrimary"
        android:paddingTop="@dimen/statusBarSize" />

    <LinearLayout
        android:id="@+id/lay_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/len_20">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_balance"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/font_12" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/label_currency"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/grey_500"
            android:textSize="@dimen/font_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="@dimen/len_16">

        <TextView
            android:id="@+id/txt_balance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/font_22"
            tools:text="1000.00" />

        <TextView
            android:id="@+id/txt_currency"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/font_22"
            tools:text="1000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/len_16"
        android:paddingTop="@dimen/len_16">

        <LinearLayout
            android:layout_width="@dimen/len_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_recharge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_recharge"
                android:drawablePadding="@dimen/len_5"
                android:drawableTint="@color/grey_500"
                android:gravity="center"
                android:text="@string/label_recharge"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/font_14" />

            <View
                android:layout_width="@dimen/len_1"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/len_10"
                android:layout_marginStart="@dimen/len_10"
                android:background="@color/grey_300" />

            <TextView
                android:id="@+id/txt_withdrawals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_withdrawals"
                android:drawablePadding="@dimen/len_5"
                android:drawableTint="@color/grey_500"
                android:gravity="center"
                android:text="@string/label_withdrawals"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/font_14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/len_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_charging_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_charging_money"
                android:drawablePadding="@dimen/len_5"
                android:drawableTint="@color/grey_500"
                android:gravity="center_vertical"
                android:text="@string/label_charging_money"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
                android:textColor="@color/textPrimary"
                android:textSize="@dimen/font_14" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/lay_add_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_16"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/len_10">

        <ImageView
            android:layout_width="@dimen/len_30"
            android:layout_height="@dimen/len_30"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_add"
            android:tint="@color/grey_500" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_16"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/label_add_bank"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/font_18" />

        <ImageView
            android:layout_width="@dimen/len_10"
            android:layout_height="@dimen/len_10"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_direction_right"
            android:tint="@color/grey_500" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_apply_bank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/len_1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/len_10">

        <ImageView
            android:layout_width="@dimen/len_30"
            android:layout_height="@dimen/len_30"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_apply_bank"
            android:tint="@color/grey_500" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/len_16"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/label_apply_bank"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="@color/textPrimary"
            android:textSize="@dimen/font_18" />

        <ImageView
            android:layout_width="@dimen/len_10"
            android:layout_height="@dimen/len_10"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_direction_right"
            android:tint="@color/grey_500" />
    </LinearLayout>

</LinearLayout>
